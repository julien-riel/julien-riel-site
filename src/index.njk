---
layout: base.njk
title: Accueil
---

<section class="hero">
  <h1>Bienvenue sur {{ metadata.title }}</h1>
  <p>{{ metadata.description }}</p>
</section>

<section class="posts">
  <h2>Derniers articles</h2>
  {% set postslist = collections.posts | reverse %}
  {% if postslist.length %}
  <ul class="post-list">
    {% for post in postslist | head(5) %}
    <li>
      <article>
        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <time datetime="{{ post.date | dateFormat('iso') }}">{{ post.date | dateFormat('fr') }}</time>
        {% if post.data.description %}
        <p>{{ post.data.description }}</p>
        {% endif %}
      </article>
    </li>
    {% endfor %}
  </ul>
  {% else %}
  <p>Aucun article pour le moment.</p>
  {% endif %}
</section>
