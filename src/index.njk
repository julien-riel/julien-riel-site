---
layout: base.njk
title: Accueil
---

<section class="hero">
  <div class="hero-decoration hero-decoration--1"></div>
  <div class="hero-decoration hero-decoration--2"></div>
  <div class="hero-content">
    <h1>Bienvenue sur <span class="highlight">{{ metadata.title }}</span></h1>
    <p>{{ metadata.description }}</p>
  </div>
</section>

<section class="posts-section">
  <h2>Derniers articles</h2>
  {% set postslist = collections.posts | reverse %}
  {% if postslist.length %}
  <ul class="post-list">
    {% for post in postslist | head(5) %}
    <li class="fade-in">
      {% include "components/post-card.njk" %}
    </li>
    {% endfor %}
  </ul>
  {% else %}
  <p class="no-posts">Aucun article pour le moment.</p>
  {% endif %}
</section>
