{#
  Search component
  Usage: {% include "components/search.njk" %}
  Requires: Lunr.js integration (Phase 4)
#}
<div class="search-container">
  <form class="search-form" role="search" action="/recherche/" method="get">
    <label for="search-input" class="visually-hidden">Rechercher</label>
    <input
      type="search"
      id="search-input"
      name="q"
      class="search-input"
      placeholder="Rechercher..."
      autocomplete="off"
    >
    <button type="submit" class="search-button" aria-label="Lancer la recherche">
      <svg aria-hidden="true" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
    </button>
  </form>
  <div class="search-results" aria-live="polite" aria-atomic="true"></div>
</div>
